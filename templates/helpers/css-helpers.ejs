<%
this.helpers = this.helpers || {}

if(typeof this.helpers.css_load_html === "undefined") {
  this.helpers.css_load_html = this.helpers.css_load_html || ""
}

this.helpers.css_load = function(path, id) {
  if(id) {
    this.helpers.css_load_html += "<link rel='stylesheet' id='" + id + "' href='" + path + "' type='text/css' media='all'>"
  } else {
    this.helpers.css_load_html += "<link rel='stylesheet' href='" + path + "' type='text/css' media='all'>"
  }
}
%>